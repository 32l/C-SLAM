<launch>
	
	<param name="use_sim_time" value="True"/>	

	<arg name="imu_topic" default="/firefly/ground_truth/imu"/>	

    <node name="c_localization" 
          pkg="c_slam_roamfree" 
          type="c_localization"
          args="$(arg imu_topic)"  
          output="screen" 
          launch-prefix="">
    
     	<param name="IMU_N_integration_steps" value="10"/>
     	<param name="IMU_nominal_period" value="0.01"/>
    </node>
          
	 <node name="firefly_test" 
          pkg="c_slam_roamfree" 
          type="firefly_test" 
          output="screen" 
          launch-prefix=""/>
          
          <node name="displayer" 
          pkg="c_slam_roamfree" 
          type="displayer" 
          output="screen" 
          launch-prefix=""/>

</launch>