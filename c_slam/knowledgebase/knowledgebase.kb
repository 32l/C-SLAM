FUZZIFY_CLASS ConcentricCircle
	FUZZIFY_PREDICATE ?y
		Perfect := (?y is Perfect);
		Good := (?y is Good);
			
		FUZZIFY ?y
			Good := tol(0, 10); 
			Perfect := tol(0, 5);
		END_FUZZIFY
		
	END_FUZZIFY_PREDICATE

END_FUZZIFY_CLASS